@model IEnumerable<TestTask.Models.Item>
@{
    ViewBag.Title = "Home Page";
}

<div class="container-fluid pt-5">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-body">
                    <div class="row">
                        <div class="col">
                            <h4 class="text-center">Item ranking</h4>
                            <hr />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <table class="table table-dark table-bordered table-sm">
                                <tr>
                                    <th class="p-2">
                                        Position
                                    </th>
                                    <th class="p-2">
                                        Name
                                    </th>
                                    <th class="p-2">
                                        Score
                                    </th>

                                </tr>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="p-2">
                                            @Html.DisplayFor(modelItem => item.Position)
                                        </td>
                                        <td class="p-2">
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td class="text-right p-2">
                                            @Html.DisplayFor(modelItem => item.Score)
                                        </td>
                                    </tr>
                                }

                            </table>
                        </div>
                    </div>
                    @using (Html.BeginForm("ShowPairs", "Home"))
                    {
                        @Html.AntiForgeryToken()
                        
                            <div class="form-group">
                                <div class="row">
                                    <div class="col">
                                        
                                        <input type="submit" value="Show pairs" class="btn btn-default col btn-success" />
                                       
                                    </div>
                                </div>
                            </div>
                        
                    }
                    <div class="row">
                        @{ if (ViewBag.renderPartial != null)
                            {
                                Html.Partial("ShowPairPartial");
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
